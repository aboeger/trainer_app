<h1>Listing event_reminders</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Start</th>
      <th>End</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event_reminders.each do |event_reminder| %>
      <tr>
        <td><%= event_reminder.title %></td>
        <td><%= event_reminder.start %></td>
        <td><%= event_reminder.end %></td>
        <td><%= event_reminder.notes %></td>
        <td><%= link_to 'Show', event_reminder %></td>
        <td><%= link_to 'Edit', edit_event_reminder_path(event_reminder) %></td>
        <td><%= link_to 'Destroy', event_reminder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

