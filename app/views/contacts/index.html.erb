<h1>Listing contacts</h1>

<p><%= link_to 'New Contact', new_contact_path %></p>
<p><%= link_to "New Contact Type", contact_types_path%></p>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Primary number</th>
      <th>Secondary number</th>
      <th>Street address1</th>
      <th>Street address2</th>
      <th>City</th>
      <th>State</th>
      <th>Zip code</th>
      <th>Birth date</th>
      <th>Height</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.type ? contact.type.name : "" %></td>
        <td><%= contact.first_name %></td>
        <td><%= contact.last_name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.primary_number %></td>
        <td><%= contact.secondary_number %></td>
        <td><%= contact.street_address1 %></td>
        <td><%= contact.street_address2 %></td>
        <td><%= contact.city %></td>
        <td><%= contact.state %></td>
        <td><%= contact.zip_code %></td>
        <td><%= contact.birth_date %></td>
        <td><%= contact.height %></td>
        <td><%= contact.weight %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

